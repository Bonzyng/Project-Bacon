<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/opaque_white"
    android:weightSum="2" >
    
    <ImageView
        android:contentDescription="@string/filos_logo_description"
    	android:src="@drawable/filos_logo_big"
    	android:layout_weight="1"
    	android:layout_width="fill_parent"
    	android:layout_height="0dp" />
    
    <ListView 
        android:id="@+id/matched_users_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" ></ListView>
    

</LinearLayout>
