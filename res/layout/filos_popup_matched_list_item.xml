<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/popup_matched_list_item_profile_pic"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/result_user_profile_pic"
        android:padding="2dp" />

    <ImageView
        android:id="@+id/popup_matched_list_item_type_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/popup_matched_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/popup_matched_list_item_profile_pic"
        android:gravity="center_vertical|left"
        android:padding="2dp"
        android:textColor="@color/filos_logo_text_color"
        android:textSize="18sp" />

</RelativeLayout>