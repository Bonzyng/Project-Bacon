<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    android:weightSum="100"
    android:background="@color/list_item_gray" >
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="19"
        android:layout_height="55dp"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="100" >
        
        <ImageView
            android:id="@+id/user_profile_pic"
            android:contentDescription="@string/result_user_profile_pic"
            android:layout_width="match_parent"
            android:layout_weight="70"
            android:layout_height="0dp" />
    </LinearLayout>
    
    
    <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="62"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp" >
            
        <TextView
                android:id="@+id/user_profile_name"
                android:textColor="#333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />
    </LinearLayout>
    
    <LinearLayout 
        android:orientation="horizontal"
        android:gravity="center|center_vertical"
        android:layout_width="0dp"
        android:layout_weight="19"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp" >
        
        <ImageView 
            android:id="@+id/mutual_contacts_logo"
            android:src="@drawable/num_of_mutuals_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:paddingRight="5dp" />
        
        <TextView 
            android:id="@+id/mutual_contacts_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
    </LinearLayout>
    
</LinearLayout>
